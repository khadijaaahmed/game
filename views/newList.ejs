<% layout('/layouts/boilerplate') %>
   <div clas="row">
   <div class="col-8 offset-2">
        <form method="POST" action="/listings"  class="needs-validation" novalidate>
        <h2>List Details</h2>
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input  name="Listing[title]" placeholder="enter your title" type="text"  class="form-control" required/>
        </div>

        <div class="row">
        <div class="mb-3 col-5">
        <label for="price" class="form-label">Price</label>
        <input  name="Listing[price]"  placeholder="enter your price" type="number" class="form-control"required />
        </div>

        <div class="mb-3 col-4">
        <label for="location" class="form-label">Location</label>
        <input  name="Listing[location]" placeholder="enter your location" type="text" class="form-control" required/>
        </div>
        </div>

        <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input  name="Listing[country]"  placeholder="enter your country" type="text" class="form-control" required/>
        </div>

        <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input  name="Listing[image][url]"   placeholder="image URL/Link" type="text" class="form-control"/>
        </div>

        <div class="mb-3">
        <label for="description" class="form-label" >Description</label>
        <textarea name="Listing[description]"  placeholder="enter your hotel description overhere...." rows="10" cols="30" class="form-control" required></textarea>
        </div>
       <div class="mb-3">
       <button  type="submit" class="btn btn-danger">Add</button>
       </div>
    </form>
 </div> 
 </div>

 





